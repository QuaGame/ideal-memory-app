<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/itemMaterialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleTaskTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Встреча в 121"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/timeTaskTextView"
                android:layout_below="@id/titleTaskTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 09:30"
                android:textSize="14sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/importanceTaskTextView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>